<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/viewholder_width"
    android:layout_height="@dimen/recyclerview_height"
    android:background="@color/White"
    android:layout_margin="@dimen/cardview_outside_margin"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/cardview_inside_margin"
        >

        <TextView
            android:id="@+id/weekday_date"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:textSize="@dimen/fontsize_date"
            android:gravity="center"
            />

        <ImageView
            android:id="@+id/weekday_icon"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="40"
            />

        <TextView
            android:id="@+id/weekday_hightemp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:gravity="center_horizontal"
            android:textSize="@dimen/fontsize_temp"
            />

        <TextView
            android:id="@+id/weekday_lowtemp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:gravity="center_horizontal"
            android:textSize="@dimen/fontsize_temp"
            />


    </LinearLayout>

</android.support.v7.widget.CardView>